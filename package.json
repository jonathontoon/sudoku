{
  "name": "sudoku-solver",
  "version": "1.0.0",
  "description": "A TypeScript implementation of Peter Norvig's Sudoku solver algorithm",
  "type": "module",
  "main": "./dist/sudoku.umd.cjs",
  "module": "./dist/sudoku.js",
  "types": "./dist/lib.d.ts",
  "exports": {
    ".": {
      "import": "./dist/sudoku.js",
      "require": "./dist/sudoku.umd.cjs",
      "types": "./dist/lib.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "vite build && tsc --emitDeclarationOnly",
    "build:watch": "vite build --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:types": "vitest run --typecheck",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,md}\""
  },
  "keywords": [
    "sudoku",
    "solver",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^3.2.3",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0",
    "vite": "^5.4.19",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.3"
  }
}
