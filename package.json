{
  "name": "sudoku-solver",
  "version": "1.0.0",
  "description": "A TypeScript implementation of Peter Norvig's Sudoku solver algorithm",
  "type": "module",
  "source": "src/index.ts",
  "main": "dist/sudoku.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/sudoku.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "pnpm run clean && pnpm run build:dev && pnpm run build:min",
    "build:dev": "parcel build --no-optimize --no-source-maps",
    "build:min": "terser dist/sudoku.js -o dist/sudoku.min.js --compress --mangle",
    "clean": "rm -rf dist",
    "watch": "parcel watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:types": "tsc --noEmit",
    "format": "prettier --write \"{src,examples}/**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"{src,examples}/**/*.{ts,tsx,js,jsx,json,md}\"",
    "demo": "node examples/demo.js",
    "demo:ts": "tsx examples/demo.ts",
    "simple": "node examples/simple-usage.js",
    "simple:ts": "tsx examples/simple-usage.ts"
  },
  "keywords": [
    "sudoku",
    "solver",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@jest/globals": "^30.0.2",
    "@parcel/bundler-library": "^2.15.2",
    "@parcel/config-default": "^2.15.2",
    "@parcel/packager-ts": "2.15.2",
    "@parcel/transformer-typescript-types": "2.15.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "jest": "^30.0.2",
    "parcel": "^2.15.2",
    "prettier": "^3.2.5",
    "terser": "^5.43.1",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.0",
    "tsx": "^4.20.3",
    "typescript": "^5.0.0"
  }
}
